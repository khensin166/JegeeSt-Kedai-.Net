@model CartDto
<form method="post">
    <!-- Hidden inputs -->
    <input asp-for="CartHeader.UserId" hidden />
    <input asp-for="CartHeader.CartHeaderId" hidden />
    <input asp-for="CartHeader.CouponCode" hidden />
    <input asp-for="CartHeader.Discount" hidden />
    <input asp-for="CartHeader.CartTotal" hidden />

    <div class="border mt-2 p-4 rounded">
        <div class="container row">
            <!-- Checkout and Back to Cart buttons -->
            <div class="col-md-7 col-12">
                <span style="font-size:25px;" class="text-warning mb-2">CheckOut</span>
            </div>
            <div class="col-md-5 col-12">
                <a asp-action="CartIndex" class="btn btn-outline-warning form-control">Kembali ke keranjang</a>
            </div>
            <br /><br /><br />
            <hr />
            <!-- Customer information section -->
            <div class="col-7">
                <div class="row pt-2">
                    <!-- Input fields for customer information -->
                    <!-- Name -->
                    <div class="col-12 py-2">
                        <input asp-for="CartHeader.Name" placeholder="full name..." class="form-control" />
                        <span asp-validation-for="CartHeader.Name" class="text-danger"></span>
                    </div>
                    <!-- Email -->
                    <div class="col-12 py-2">
                        <input placeholder="email..." asp-for="CartHeader.Email" class="form-control" />
                        <span asp-validation-for="CartHeader.Email" class="text-danger"></span>
                    </div>
                    <!-- Phone -->
                    <div class="col-12 py-2">
                        <input class="form-control" asp-for="CartHeader.Phone" placeholder="phone number..." />
                        <span asp-validation-for="CartHeader.Phone" class="text-danger"></span>
                    </div>
                    <!-- Additional information -->
                    <div class="col-12 pt-2">
                        <label class="col-form-label">Pesanan akan siap dalam 30 menit setelah melakukan pemesanan. Jika Anda memesan saat restoran tutup maka akan siap keesokan harinya..</label>
                    </div>
                    <!-- Image input for proof of payment -->
                    <div class="col-12 py-2">
                        <input type="file" name="proofOfPayment" accept="image/*" class="form-control" />
                    </div>
                </div>
            </div>
            <!-- Order summary section -->
            <div class="col-5">
                <div class="card mt-2">
                    <div class="card-body">
                        <!-- Order details -->
                        <div class=" d-none d-lg-block">
                            <div class="row text-danger">
                                <div class="col-6">
                                    Detail Pesanan
                                </div>
                                <div class="col-3">
                                    Biaya
                                </div>
                                <div class="col-3">
                                    Total
                                </div>
                            </div>
                        </div>
                        <hr />
                        <!-- Iterate over cart items -->
                        @foreach (var cartObj in Model.CartDetails)
                        {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span style="font-size:20px">@cartObj.Product.Name</span>
                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @cartObj.Product.Price.ToString("c")</span>
                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @cartObj.Count</span>
                                </div>
                            </div>
                            <hr />
                        }
                        <!-- Order total -->
                        <div class="row">
                            <div class="col-12 text-center pr-4 text-danger">
                                Order Total :  @Model.CartHeader.CartTotal.ToString("c") <br />
                                @if (Model.CartHeader.Discount > 0)
                                {
                                    <span class="text-success"> Order Discount :  @Model.CartHeader.Discount.ToString("c")</span>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Card footer with submit button -->
                  
                </div>
            </div>
        </div>
    </div>
<div class="card-footer">
    <div class="row">
        <div class="col-12 ">
            <!-- Submit button -->
            <button type="submit" class="btn btn-success form-control">
                <span>Konfirmasi Pembelian</span>
            </button>
        </div>
    </div>
</div>
</form>

@section Scripts {
         var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                alert(successMessage);
            }
    <partial name="_ValidationScriptsPartial" />
}
